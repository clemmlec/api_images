{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<section class="container">
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <button class="btn success"><a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a></button>

    <button class="btn primary"><a href="{{ path('app_user_index') }}">back to list</a></button>


    {{ include('user/_delete_form.html.twig') }}
</section>
{% endblock %}
