{% extends 'base.html.twig' %}

{% block title %}Images{% endblock %}

{% block body %}
<section class="container">
    <h1>Images</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ImageName</th>
                <td>{{ image.imageName | slice(0,20) ~ "..." }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{vich_uploader_asset(image, 'imageFile')}}"/></td>
            </tr>
            <tr>
                <th>ImageUpdatedAt</th>
                <td>{{ image.imageUpdatedAt ? image.imageUpdatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    
    <button class="btn warning"><a href="{{ path('app_images_edit', {'id': image.id}) }}">edit</a></button>

    <button class="btn primary"><a href="{{ path('app_images_index') }}">back to list</a></button>


    {{ include('images/_delete_form.html.twig') }}
</section>
{% endblock %}
