<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/gh/98mprice/PSone.css@master/PSone.min.css">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header class="dark">
            <nav class="container">
                <button class="btn primary"><a href="{{ path('app') }}">home</a></button>
                <button class="btn success"><a href="{{ path('doc') }}">doc</a></button>
                <button class="btn warning"><a href="{{ path('contact') }}">contact</a></button>
            </nav>
        </header>
        {% block body %}{% endblock %}
        <footer class="container">
            <button class="btn small"><a href="{{ path('doc' , {'_fragment': 'mentions'} )}}">mentions légale</a></button>
            <button class="btn small">      
                {% if app.user and is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_images_index') }}">Admin</a>
                {% else %}
                    Api_images © 2022
                {% endif %}
            </button>
            <button class="btn small"><a href="{{ path('contact') }}">contact</a></button>
            
        </footer>
    </body>
</html>
